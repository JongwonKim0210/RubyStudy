<form action="/home/update/<%= @post.id %>" method="post">
	<div class="form-group">
    <label for="exampleInputEmail1">글제목</label>
    <input name="title" type="text" class="form-control" id="exampleInputEmail1" value="<%= @post.title %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">작성자</label>
	<input name="author" type="text" class="form-control" id="exampleInputPassword1" value="<%= @post.author %>">
  </div>
	<textarea name="content" class="form-control"><%= @post.content %></textarea>
	<input type="submit" value="글 수정" class="submit">
</form>

<style>
	
	form{
		max-width : 800px;
		margin	:0 auto;
	}
	
	.submit{
		margin	:10px;
	}
	
</style>